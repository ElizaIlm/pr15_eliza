<Page x:Class="Documents_ilmasheva.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Documents_ilmasheva.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Add" Height="439">


    <Grid Margin="0,0,0,10" >
        <!-- Заголовок -->
       
        <Rectangle Fill="#FF808080" Height="40" VerticalAlignment="Top" Margin="0,0,0,0"/>
        <Image Source="/Image/icon-black.png" Width="44" Height="40" VerticalAlignment="Top" Margin="11,2,745,0"/>
        <TextBlock Text="Добавить документ" FontSize="18" FontWeight="Bold" Foreground="White"
                   VerticalAlignment="Top" Margin="64,7,-4,0"/>
        <Button Content="Вернуться" Height="30" VerticalAlignment="Top" Margin="590,4,52,0" Click="Back"/>

        <!-- Основное содержимое -->
        <!-- Левая панель: изображение и кнопка "Выбрать" -->
        <Image x:Name="src" Source="/Image/icon-black.png" Margin="-22,98,547,137"/>
        <Button Content="Выбрать" Margin="64,275,633,106" Click="SelectImage"/>

        <!-- Правая панель: поля ввода -->
        <Label Content="Укажите наименование:" Margin="260,55,300,321"/>
        <TextBox x:Name="tb_name" Width="300" Margin="262,88,238,318"/>
        <Label Content="Укажите ответственного:" Margin="262,115,296,273"/>
        <TextBox x:Name="tb_user" Width="300" Margin="262,140,238,263"/>

        <Label Content="Укажите код документа:" Margin="262,162,289,218"/>
        <TextBox x:Name="tb_id" Width="300" Margin="262,187,238,213"/>

        <Label Content="Укажите дату поступления:" Margin="262,214,256,166"/>
        <TextBox x:Name="tb_date" Width="300" Margin="262,244,238,160"/>

        <Label Content="Укажите статус:" Margin="262,271,296,130"/>
        <ComboBox x:Name="tb_status" Width="300" Height="30" Margin="262,302,238,94">
            <ComboBoxItem Content="Входящий" Tag="1"/>
            <ComboBoxItem Content="Исходящий" Tag="2"/>
        </ComboBox>

        <Label Content="Направление:" Margin="260,336,240,53" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.742"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.654"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="tb_vector" Height="30" Margin="262,360,347,36"/>
        <Button Content="Сохранить" x:Name="bthAdd" Height="30" Margin="461,360,238,36" Click="AddDocument"/>
    </Grid>
</Page>
